{% extends '@bolt/exception/exception.twig' %}

{% block exception %}
    {% if type == 'apache' %}
        {{ include('@bolt/exception/system/_apache.twig') }}
    {% elseif type == 'cache' %}
        {{ include('@bolt/exception/system/_cache.twig') }}
    {% elseif type == 'configuration' %}
        {{ include('@bolt/exception/system/_configuration.twig') }}
    {% elseif type == 'magic-quotes' %}
        {{ include('@bolt/exception/system/_magic-quotes.twig') }}
    {% elseif type == 'safe-mode' %}
        {{ include('@bolt/exception/system/_safe-mode.twig') }}
    {% endif %}
{% endblock exception %}
