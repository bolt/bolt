{# Page: NavSecondary > Configuration > Users > Invite #}

{% extends '@bolt/_base/_page-nav.twig' %}

{% block page_nav 'Settings/Configuration' %}

{% block page_title %}
    {{ __('page.invitation.create.title') }}
{% endblock page_title %}

{% block page_main %}

{% form_theme context.form 'form_bolt_layout.twig' %}

<div class="row">
    <div class="col-md-9">

        <p style="max-width: 500px;">
            {{ __('page.invitation.share.intro') }}
        </p>

        <div class="form-group ">
            <label class="col-sm-2 control-label required" for="invite_share_link">{{ __('page.invitation.share.share-link') }}</label>
            <div class="col-sm-10 col-md-6 col-lg-4">
                <input type="text" id="invite_share_link" disabled="disabled" class="form-control wide" value="{{ context.link }}">
            </div>
            <div>
                <button type="button" class="btn btn-primary">{{ __('page.invitation.button.copy-clipboard') }}</button>
            </div>
        </div>


        {{ form_start(context.form, { 'attr': { 'class': 'form-horizontal' } }) }}

            {{ form_widget(context.form) }}

        {{ form_end(context.form) }}

    </div>

    <aside class="col-md-3">
        {{ include('@bolt/edituser/_aside.twig') }}
    </aside>

</div>

{% endblock page_main %}
