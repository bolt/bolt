{% if field.type == "file" %}
<div class="col-sm-12 dropzone clearfix" id="dropzone-{{key}}">

    {{ macro.label(key, field) }}
        <span class="label info-pop" data-html="true" data-title="{% if field.label %}{{field.label}}{% else %}{{ key|ucfirst}}{%endif%}"
