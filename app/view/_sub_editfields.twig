{% if field.postfix is defined and field.postfix is not empty %}
    <div class='col-sm-12'>
        {{ field.postfix|raw }}
    </div>
{% endif %}

</div><!-- end of 'formgroup' -->

{% if field.separator is defined and field.separator == true %}
