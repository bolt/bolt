
{# content is 'editable' if either the user is the owner, or user is admin or higher #}
{% set editable = (user.username == content.username) or isallowed('editcontent:all') %}

<tr {% if content.status!='published' %}class="dim"{% endif %}>
    <td class='id hide-phone'>№ {{content.id}}</td>
    <td class='excerpt {% if not compact %}large{% endif %}'><span>
        <strong class="show-phone">№ {{content.id}}. </strong>
        <strong>
            {% if editable %}
            <a href="{{ path('editcontent', { 'contenttypeslug': content.contenttype.slug, 'id': content.id }) }}" title="Slug: {{ content.slug }}">
                {{content.getTitle}}{{content.name}}
            </a>
            {% else %}
            <strong>
                {{content.getTitle}}{{content.name}}
            </strong>
            {% endif %}
        </strong>
        {{ content.excerpt(excerptlength) }}
                    </span></td>
    <td class='listthumb'>
        {% if content.getImage is not empty %}
            {{content.getImage|fancybox(thumbsize, thumbsize*0.75, 'c')}}
        {% endif %}
    </td>
    {% if not compact %}
    <td class='username hide-phone'>
        <i class="icon-user"></i> {% if users[content.username] is defined %}{{ users[content.username].displayname }}{% else %}<s>{{ content.username }}</s>{% endif %}<br>
        <i class="icon-calendar"></i> {{ content.datepublish|date('d/m/Y') }}<br>
        {% if content.sortorder is defined and content.sortorder is not sameas(false) %}
            <i class="icon-sort"></i> Order: {{ content.sortorder }} <br>
        {% endif %}
    </td>
    {% endif %}
    <td class='actions'>
        <div class="btn-group">
            {% if editable %}
            <button class="btn btn-mini uselink">
                <a href="{{ path('editcontent', { 'contenttypeslug': content.contenttype.slug, 'id': content.id }) }}">
                <i class="icon-edit"></i> Edit</a>
            </button>
            {% endif %}
            <button class="btn dropdown-toggle btn-mini" data-toggle="dropdown">
                <i class="icon-info-sign"></i>
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu pull-right">
            {% if editable %}

                {% if content.status != "published" %}
                    <li><a href="{{ path('contentaction', { 'action': 'publish', 'contenttypeslug': content.contenttype.slug,  'id': content.id }) }}">
                        <i class="icon-star-empty"></i> Publish {{ contenttype.singular_name }}</a></li>
                {% else %}
                    <li><a href="{{ path('contentaction', { 'action': 'held', 'contenttypeslug': content.contenttype.slug,  'id': content.id }) }}">
                        <i class="icon-star"></i> Change status to 'held'</a></li>
                    <li><a href="{{ path('contentaction', { 'action': 'draft', 'contenttypeslug': content.contenttype.slug,  'id': content.id }) }}">
                        <i class="icon-pencil"></i> Change status to 'draft'</a></li>
                {% endif %}
                <li><a href="{{ path('editcontent', { 'contenttypeslug': content.contenttype.slug, 'id': content.id, 'duplicate': 1 }) }}">
                    <i class="icon-copy"></i> Duplicate {{ content.contenttype.singular_name }}</a></li>
                <li><a href="{{ path('contentaction', { 'action': 'delete', 'contenttypeslug': content.contenttype.slug, 'id': content.id, token: token() }) }}"
                       data-confirm="Are you sure you want to delete '{{content.getTitle}}'?" class="confirm">
                    <i class="icon-trash"></i> Delete {{ content.contenttype.singular_name }}</a></li>
                <li class="divider"></li>
            {% endif %}
                <li><a class="nolink">Author: <strong><i class="icon-user"></i>
                    {% if users[content.username] is defined %}{{ users[content.username].displayname }}{% else %}
                        <s>{{ content.username }}</s>{% endif %}</strong></a></li>
                <li><a class="nolink">Current status:
                    <strong>{{ content.status }}</strong></a></li>
                <li><a class="nolink">Slug:
                    <code title="{{ content.slug }}">{{ content.slug|trimtext(30) }}</code></a></li>
                <li><a class="nolink">Created on:
                    <strong><i class="icon-asterisk"></i> {{ content.datecreated|date("Y-m-d H:i") }}</strong></a></li>
                <li><a class="nolink">Published on:
                    <strong><i class="icon-calendar"></i> {{ content.datepublish|date("Y-m-d H:i") }}</strong></a></li>
                <li><a class="nolink">Last edited on:
                    <strong><i class="icon-refresh"></i> {{ content.datechanged|date("Y-m-d H:i") }}</strong></a></li>
                {% for taxonomyslug, values in content.taxonomy %}
                    {% if values|length > 1 %}
                        <li><a class="nolink">{{ config.taxonomy[taxonomyslug].name }}:
                            <strong><i class="icon-tag"></i> {{ values|join(", ") }}</strong></a></li>
                    {% else %}
                        <li><a class="nolink">{{ config.taxonomy[taxonomyslug].singular_name }}:
                            <strong><i class="icon-tag"></i> {{ values.0 }}</strong></a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>

    </td>
</tr>
