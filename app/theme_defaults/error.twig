<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>{{ __('Bolt - Fatal error.') }}</title>
    <link rel="stylesheet" type="text/css" href="{{ paths.app }}view/css/bootstrap.min.css" />
</head>
<body style="padding: 20px;">

    <div style="max-width: 530px; margin: auto;">

    <h1>{{ __('Bolt - Fatal error.') }}</h1>

    <ul>
        <li>{{ __('Class:') }} {{ class }}</li>
        <li>{{ __('Message:') }} {{ message }}</li>
        <li>{{ __('Code:') }} {{ code }}</li>
    </ul>
    
    {% if app.config.get('general/debug') and app.session.get('user') is not null %}
        {% for i in trace %}
            {% if i.line is defined and i.class is defined %}
                <p>
                    <strong>{{ i.class }}{{ i.type }}{{ i.function }}()</strong><br>
                    <em>{{ i.file }}, line {{ i.line }}</em>
                    {%  if i.args is defined %}
                        {{ print(i.args) }}
                    {%  endif %}
                </p>
            {%  endif %}
        {%  endfor %}
    {% endif %}

    </div>
    <hr>

</body>
</html>
