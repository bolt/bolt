# Set the default handler.
DirectoryIndex index.php index.html index.htm

<FilesMatch "\.(yml|db|twig)$">
    Order deny,allow
    Deny from all
</FilesMatch>

<IfModule mod_rewrite.c>
  RewriteEngine on

  # Some servers require the RewriteBase to be set. If so, set to the correct folder.
  # RewriteBase /

  RewriteRule ^vendor/(.*)?$ / [R=301,L]
  RewriteCond %{REQUEST_URI} !^/app/view/
  RewriteCond %{REQUEST_URI} !^/app/classes/
  RewriteRule ^app/(.*)?$ / [R=301,L]

  RewriteRule ^thumbs/(.*)?$ ./app/classes/timthumb.php [L]

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !=/favicon.ico
  RewriteRule ^ ./index.php [L]

</IfModule>

