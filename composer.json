{
    "name": "bobdenotter/bolt",
    "description": "Sophisticated, lightweight & simple CMS",
    "homepage": "http://bolt.cm",
    "keywords": "CMS",
    "license": "MIT",
    "require": {
        "silex/silex": "1.0.*@dev",
        "symfony/yaml": "2.1.*",
        "symfony/form": "2.1.*",
        "symfony/validator": "2.1.*",
        "symfony/config": "2.1.*",
        "symfony/twig-bridge": "2.1.*",
        "symfony/translation": "2.1.*",
        "symfony/console": "2.1.*",
        "symfony/filesystem": "2.1.*",
        "doctrine/dbal": "2.3.*",
        "twig/twig": ">=1.8,<2.0-dev",
        "guzzle/guzzle": "3.1.*",
        "swiftmailer/swiftmailer": ">=4.2.0,<4.3-dev"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "1.2.*@dev",
        "phpunit/phpunit": "3.7.13"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": {
            "Bolt": "app/src/",
            "Bolt\\Tests": "app/tests"
        }
    }
}
