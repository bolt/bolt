{
    "name": "bolt/bolt",
    "description": "Sophisticated, lightweight & simple CMS",
    "homepage": "http://bolt.cm",
    "keywords": ["CMS", "Silex", "PHP", "Symfony"],
    "license": "MIT",

    "repositories": [{
        "type": "vcs",
        "url": "http://github.com/rossriley/flysystem"
    }],

    "require": {
        "bolt/dumper": ">=0.7",
        "bolt/thumbs": "1.7.*@dev",
        "brandonwamboldt/utilphp": "1.0.*",
        "composer/composer": "1.0.*@dev",
        "doctrine/dbal": "~2.4",
        "erusev/parsedown-extra": "~0.2",
        "eviweb/composer-wrapper" : "1.*",
        "filp/whoops": "1.*",
        "guzzle/guzzle": "3.3.*",
        "hautelook/phpass": "dev-master",
        "ircmaxell/random-lib": "dev-master",
        "jbroadway/urlify": "1.0.0-stable",
        "league/flysystem": "~0.5",
        "php": ">=5.3.3",
        "rossriley/upload": "~1.2",
        "silex/silex": "1.*",
        "silex/web-profiler": "~1.0",
        "swiftmailer/swiftmailer": "5.*",
        "symfony/config": "2.5.x-dev",
        "symfony/console": "2.5.x-dev",
        "symfony/filesystem": "2.5.x-dev",
        "symfony/finder": "2.5.x-dev",
        "symfony/form": "2.5.x-dev",
        "symfony/locale": "2.5.x-dev",
        "symfony/translation": "2.5.x-dev",
        "symfony/twig-bridge": "2.5.x-dev",
        "symfony/validator": "2.5.x-dev",
        "symfony/web-profiler-bundle": "2.5.x-dev",
        "symfony/yaml": "2.5.x-dev",
        "tdammers/htmlmaid": ">=0.5.2",
        "twig/twig": ">=1.8,<2.0-dev"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "1.2.*@dev",
        "phpunit/phpunit": "3.7.18",
        "phpunit/dbunit": "1.2.3",
        "phpmd/phpmd": "1.5.0",
        "sebastian/phpcpd": "1.4.3",
        "squizlabs/php_codesniffer": "1.5.*",
        "codeception/codeception": "*"
    },
    "minimum-stability": "beta",
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-0": {
            "Bolt": "app/src/",
            "Bolt\\Tests": "app/tests"
        }
    }
}
