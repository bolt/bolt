{
    "name": "bolt/bolt",
    "description": "Sophisticated, lightweight & simple CMS",
    "homepage": "http://bolt.cm",
    "keywords": ["CMS", "Silex", "PHP", "Symfony"],
    "license": "MIT",
    "require": {
        "php": ">=5.3.2",
        "silex/silex": "~1.0",
        "symfony/yaml": "~2.2",
        "symfony/form": "~2.2",
        "symfony/validator": "~2.2",
        "symfony/config": "~2.2",
        "symfony/twig-bridge": "~2.2",
        "symfony/translation": "~2.2",
        "symfony/console": "~2.2",
        "symfony/filesystem": "~2.2",
        "symfony/finder": "~2.2",
        "doctrine/dbal": "2.4.x-dev",
        "twig/twig": ">=1.8,<2.0-dev",
        "jbroadway/urlify": "1.0.0-stable",
        "guzzle/guzzle": "3.3.*",
        "swiftmailer/swiftmailer": "5.*",
        "htmlawed/htmlawed": "dev-master",
        "dflydev/markdown": "1.0.*",
        "hautelook/phpass": "dev-master",
        "filp/whoops": "1.*",
        "garetjax/phpbrowscap": "*"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "1.2.*@dev",
        "phpunit/phpunit": "3.7.18"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-0": {
            "Bolt": "app/src/",
            "Bolt\\Tests": "app/tests"
        }
    }
}
