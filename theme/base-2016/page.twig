{% extends 'partials/_master.twig' %}

{% block main %}

    <h1 data-bolt-field="title">{{ record.title }}</h1>

    {{ record.teaser }}

    {% if record.image!="" %}
        <a href="{{ image(record.image) }}">
            <img src="{{ thumbnail(record.image, 740, 560) }}" data-bolt-field="image[file]">
        </a>
    {% endif %}

    {{ record.body }}

    {# If there are repeaters, we should output them. #}
    {{ fields(record = record, template = 'partials/_sub_fields.twig', common = false, repeaters = true) }}

    {# Uncomment this if you wish to dump the entire record to the client, for debugging purposes.
    {{ dump(record) }}
    #}

    {{ include('partials/_recordfooter.twig', { 'record': record, 'extended': true }) }}

{% endblock main %}
