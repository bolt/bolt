{% include '_header.twig' %}

<h1>Search results</h1>

{% if records %}
    {% for record in records %}
        <article>
            {% if record.image!="" %}
                <div class='imageholder'><img
                        src="{{ record.image|thumbnail(120, 120) }}">
                </div>
            {% endif %}

            <h2><a href="{{ record.link }}">{{ record.title }}</a></h2>

            {{ record.excerpt(300) }}

            <p class="meta"><a href="{{ record.link }}">Link</a> - Posted
                by {{ record.user.displayname }}
                on {{ record.datepublish|date("M d, â€™y") }}</p>

        </article>
    {% endfor %}
{% else %}
    <p>No results to display!</p>
{% endif %}

